<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.livechat.controller.LoginController">
   <children>
      <Label alignment="CENTER" layoutX="77.0" layoutY="56.0" prefHeight="34.0" prefWidth="259.0" text="WELCOME" textFill="#0059ff">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <ImageView fitHeight="98.0" fitWidth="115.0" layoutX="155.0" layoutY="170.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assest/img/user.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtUserName" layoutX="74.0" layoutY="352.0" prefHeight="34.0" prefWidth="259.0" text="User Name">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </TextField>
      <Button layoutX="155.0" layoutY="447.0" mnemonicParsing="false" onAction="#btnLogin" prefHeight="34.0" prefWidth="91.0" text="LOGIN">
